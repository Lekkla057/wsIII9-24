 <% include ../partials/header %>
<a name="" id="" class="btn btn-danger" href="add" role="button">Edit</a>
     <input class="form-control" id="myInput" type="text" placeholder="Search..">
       <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tittle</th>
            <th>Price</th>
            <th>E-dit</th>
            <th>DELETE</th>
        </tr>
    </thead>
    <tbody>
     <% products.forEach(function(product){ %>
        <tr>
            <td scope="row"><%=product.id %></td>
            <td><%=product.title %></td>
            <td><%=product.price %></td>
            <td><a name="" id="" class="btn btn-danger" href="products/<%=product.id %>" role="button">Edit</a></td>
            <td><a name="" id="" class="btn btn-danger" href="product_delete/<%=product.id %>" role="button">DELETE</a></td>
        </tr>
      <% }); %>
    </tbody>
</table>





