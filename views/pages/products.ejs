 <% include ../partials/header %>




<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tittle</th>
            <th>Price</th>
            <th>E-dit</th>
            <th>DELETE</th>
            <th><a name="" id="" class="btn btn-success" href="add" role="button">Add</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
     <% products.forEach(function(product){ %>
        <tr>
            <td scope="row"><%=product.product_id %></td>
            <td><%=product.title %></td>
            <td><%=product.price %></td>
            
            <td><a name="" id="" class="btn btn-warning" href="products/<%=product.product_id %>" role="button">Edit</a></td>
            <td><a name="" id="" class="btn btn-danger" href="product_delete/<%=product.product_id %>" onclick="return confirm('Are you sure you want to delete?')"role="button">Delete</a></td>
        </tr>
      <% }); %>
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>




