 <% include ../partials/header %>


<div style="overflow-x:auto;">

<table class="table ">
    <thead>
        <tr class="text-white bg-danger">
            <th>ID</th>
            <th>Tittle</th>
            <th>Price</th>
            
          
            <th><a name="" id="" class="btn btn-success" href="add" role="button">Add</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
     <% products.forEach(function(product){ %>
        <tr class="text-white bg-info">
            <td scope="row"><%=product.product_id %></td>
            <td><%=product.title %></td>
            <td><%=product.price %></td>
            
            <td><a name="" id="" class="btn btn-warning" href="products/<%=product.product_id %>" role="button">Edit</a></td>
          
        </tr>
      <% }); %>
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
