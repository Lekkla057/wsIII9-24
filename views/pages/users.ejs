<% include ../partials/header %>


 <br>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Password</th>
            <th>E-dit</th>
  
            <th><a  class="btn btn-success" href="/user_add" role="button">New User</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
     <% users.forEach(function(user){ %>
        <tr>
            <td scope="row"><%= user.user_id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a name="" id="" class="btn btn-warning" href="/users/<%= user.user_id %>" role="button">Edit</a></td>
            
        
        </tr>
      <% }); %>
    </tbody>
</table>

<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>
